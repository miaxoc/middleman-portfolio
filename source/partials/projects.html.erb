<h2 class="project-title">Check out some of my projects!</h2>

<div class="projects" style="width: 100%;">
  <div class="row my-5">
    <div class="col-12">
      <div class="container">
        <% data.projects.each do |project| %>
          <h1 class="text-center mt-5"><%= project.name %></h1>
          <div class="cards">
            <div class="card-product">
              <%= image_tag project.image, alt: "project image" %>
            </div>
            <div class="card-product">
              <div class="card-product-infos w-100">
                <h2>Description:</h2>
                <p><%= project.description %></p>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="card-links d-flex">
                    <% link_to project.github, class: 'external-link', target: '_blank' do %>
                      <i class="fa-brands fa-github"></i>
                    <% end %>
                    <% if project.online?  %>
                      <% link_to project.url, class: 'external-link', target: '_blank' do %>
                        <i class="fas fa-external-link-alt"></i>
                      <% end %>
                    <% end %>
                  </div>
                </div>

              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
